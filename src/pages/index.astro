---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main>
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<div class="number">315</div>
					<h1>Village 315</h1>
					<div class="accent-line"></div>
				</div>
			</div>
		</section>

		<section class="contact">
			<div class="container">
				<h2>Contact Us</h2>
				<a href="mailto:secretary.village315@gmail.com" class="contact-button">
					secretary.village315@gmail.com
				</a>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		width: 100%;
		min-height: 100vh;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 32px;
	}

	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #000;
		color: #fff;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 120%;
		height: 120%;
		background:
			linear-gradient(90deg, transparent 49.5%, rgba(255,255,255,0.03) 49.5%, rgba(255,255,255,0.03) 50.5%, transparent 50.5%),
			linear-gradient(0deg, transparent 49.5%, rgba(255,255,255,0.03) 49.5%, rgba(255,255,255,0.03) 50.5%, transparent 50.5%);
		background-size: 100px 100px;
		pointer-events: none;
	}

	.hero-content {
		position: relative;
		z-index: 1;
	}

	.number {
		font-size: clamp(8rem, 20vw, 18rem);
		font-weight: 700;
		line-height: 1;
		margin-bottom: -0.2em;
		opacity: 0.1;
		letter-spacing: 0.05em;
	}

	.hero-content h1 {
		font-size: clamp(3rem, 8vw, 6rem);
		margin: 0;
		font-weight: 300;
		letter-spacing: 0.1em;
		text-transform: uppercase;
	}

	.accent-line {
		width: 200px;
		height: 1px;
		background: #fff;
		margin: 48px auto 0;
	}

	.contact {
		background: #fff;
		padding: 120px 0;
		text-align: center;
	}

	.contact h2 {
		font-size: clamp(2.5rem, 6vw, 4rem);
		margin-bottom: 48px;
		color: #000;
		font-weight: 300;
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	.contact-button {
		display: inline-block;
		padding: 20px 60px;
		background: transparent;
		color: #000;
		text-decoration: none;
		font-size: clamp(1rem, 2vw, 1.25rem);
		font-weight: 400;
		border: 2px solid #000;
		transition: all 0.3s ease;
		letter-spacing: 0.05em;
	}

	.contact-button:hover {
		background: #000;
		color: #fff;
	}

	@media (max-width: 768px) {
		.hero {
			min-height: 90vh;
		}

		.contact {
			padding: 80px 0;
		}

		.accent-line {
			width: 150px;
			margin-top: 32px;
		}

		.contact-button {
			padding: 16px 32px;
			font-size: 0.9rem;
		}
	}
</style>
